# Copy to .env and fill in your OpenAI key. Do NOT commit .env to git.

OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
PORT=3000

# Optional tuning
TEMPERATURE=0.2
MAX_TOKENS=800
TOP_P=1.0
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# System prompt (optional)
SYSTEM_PROMPT=Eres Atenea, un asistente virtual profesional, amable y servicial para empresas hispanas. Responde en espa√±ol de forma clara y concisa.

# Enable retrieval-augmented generation:
RAG_ENABLED=false
RAG_TOP_K=3

# Rate limiting (in-memory by default)
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000
# To use Redis-backed rate limiter, set RATE_LIMIT_REDIS_URL
